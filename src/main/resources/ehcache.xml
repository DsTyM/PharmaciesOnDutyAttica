<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xmlns:jsr107='http://www.ehcache.org/v3/jsr107'
        xsi:schemaLocation="
        http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd
        http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">

    <service>
        <jsr107:defaults enable-management="true" enable-statistics="true"/>
    </service>

    <cache alias="workingHourCache">
        <key-type>java.lang.Integer</key-type>
        <value-type>com.dstym.pharmaciesondutyattica.entity.WorkingHour</value-type>
        <expiry>
            <ttl unit="hours">23</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache>

    <cache alias="workingHoursCache">
        <key-type>java.lang.String</key-type>
        <value-type>java.util.ArrayList</value-type>
        <expiry>
            <ttl unit="hours">23</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache>

    <cache alias="workingHoursPageableCache">
        <key-type>org.springframework.data.domain.Pageable</key-type>
        <value-type>org.springframework.data.domain.Page</value-type>
        <expiry>
            <ttl unit="hours">23</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache>

    <cache alias="pharmacyCache">
        <key-type>java.lang.Integer</key-type>
        <value-type>com.dstym.pharmaciesondutyattica.entity.Pharmacy</value-type>
        <expiry>
            <ttl unit="hours">23</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache>

    <cache alias="pharmaciesCache">
        <key-type>java.lang.String</key-type>
        <value-type>java.util.ArrayList</value-type>
        <expiry>
            <ttl unit="hours">23</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">500</offheap>
        </resources>
    </cache>

    <cache alias="pharmaciesPageableCache">
        <key-type>org.springframework.data.domain.Pageable</key-type>
        <value-type>org.springframework.data.domain.Page</value-type>
        <expiry>
            <ttl unit="hours">23</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">500</offheap>
        </resources>
    </cache>

    <cache alias="pharmaciesByRegionCache">
        <key-type>java.lang.String</key-type>
        <value-type>org.springframework.data.domain.Page</value-type>
        <expiry>
            <ttl unit="hours">23</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache>

    <cache alias="availablePharmaciesPageableCache">
        <key-type>java.lang.String</key-type>
        <value-type>org.springframework.data.domain.Page</value-type>
        <expiry>
            <ttl unit="hours">23</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache>
</config>
